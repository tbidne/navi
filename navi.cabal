cabal-version:      2.4
name:               navi
version:            0.1.0.0
license:            MIT
license-file:       LICENSE
copyright:          2021 Thomas Bidne
author:             Thomas Bidne
maintainer:         tbidne@prontonmail.com
homepage:           https://github.com/tbidne/navi/
bug-reports:        https://github.com/tbidne/navi/issues
synopsis:           A utility program for sending system notifications.
description:
  Please see the README at https://github.com/tbidne/navi/#readme

category:           System, Notifications
extra-source-files:
  CHANGELOG.md
  README.md

source-repository head
  type:     git
  location: https://github.com/tbidne/navi

common common-exts
  default-extensions:
    NoImplicitPrelude
    AllowAmbiguousTypes
    ConstraintKinds
    DataKinds
    DeriveFunctor
    DerivingVia
    FlexibleContexts
    FlexibleInstances
    FunctionalDependencies
    GADTs
    ImportQualifiedPost
    InstanceSigs
    LambdaCase
    MultiParamTypeClasses
    MultiWayIf
    NamedFieldPuns
    NumericUnderscores
    OverloadedStrings
    PatternSynonyms
    RankNTypes
    ScopedTypeVariables
    StandaloneKindSignatures
    TypeApplications
    TypeFamilyDependencies

library
  import:           common-exts
  exposed-modules:
    Navi
    Navi.Args
    Navi.Config
    Navi.Config.Toml
    Navi.Config.Types
    Navi.Data.BoundedN
    Navi.Data.NonNegative
    Navi.Data.Sorted
    Navi.Effects
    Navi.Effects.MonadLogger
    Navi.Effects.MonadMutRef
    Navi.Effects.MonadNotify
    Navi.Effects.MonadShell
    Navi.Env
    Navi.Event
    Navi.Event.Toml
    Navi.Event.Types
    Navi.Note.Toml
    Navi.Prelude
    Navi.Services.Battery
    Navi.Services.Battery.Event
    Navi.Services.Battery.Toml
    Navi.Services.Battery.Types
    Navi.Services.Custom.Multiple
    Navi.Services.Custom.Multiple.Event
    Navi.Services.Custom.Multiple.Toml
    Navi.Services.Custom.Single
    Navi.Services.Custom.Single.Event
    Navi.Services.Custom.Single.Toml

  build-depends:
    , attoparsec            >=0.13.2.3 && <0.15
    , base                  ^>=4.14.1.0
    , containers            >=0.5.11.0 && <0.7
    , dbus                  ^>=1.2.14
    , directory             ^>=1.3.5.0
    , fdo-notify            ^>=0.3.1
    , katip                 ^>=0.8.4.0
    , mtl                   ^>=2.2.2
    , optparse-applicative  ^>=0.16.1.0
    , process               ^>=1.6.7.0
    , text                  ^>=1.2.3.2
    , tomland               ^>=1.3.0.0
    , unexceptionalio       ^>=0.5.1

  hs-source-dirs:   src
  default-language: Haskell2010

executable navi
  import:           common-exts
  main-is:          Main.hs
  build-depends:
    , base
    , containers
    , dbus
    , directory
    , fdo-notify
    , katip
    , mtl
    , navi
    , optparse-applicative
    , text
    , unexceptionalio

  hs-source-dirs:   app
  ghc-options:      -threaded -with-rtsopts=-N
  default-language: Haskell2010
